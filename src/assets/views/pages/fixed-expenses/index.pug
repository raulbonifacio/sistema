extends /layouts/main

block icon
	i.fas.fa-file-invoice-dollar.me-2

block title
	| Despesas Fixas

block subtitle
	| Listagem de gastos fixos.

block section
	.row
		.col-12.text-center
			a(
				href="/fixed-expenses/new"
			).btn.btn-primary
				| Adicionar despesa fixa
				small: i.fas.fa-plus.ms-2
			hr

		.col-12.py-3: form(action="/fixed-costs")
			.input-group
				input(type="text", name="search", placeholder="Procure por gastos fixos...").form-control
				.input-group-append
					button.btn.btn-primary Buscar
						i.fas.fa-search.ms-2

		.col-12: .table-responsive: table.table.table-sm.table-borderless
			tr.text-center
				th Descrição
				th Data de vencimento
				th Situação
				th Ações

